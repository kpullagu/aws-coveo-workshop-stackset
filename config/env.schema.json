{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Workshop Environment Configuration",
  "description": "Environment variables, SSM parameters, and Secrets Manager keys for the Coveo + AWS workshop",
  "type": "object",
  "properties": {
    "COVEO_ORG_ID": {
      "type": "string",
      "description": "Coveo organization identifier"
    },
    "COVEO_SEARCH_API_KEY": {
      "type": "string",
      "description": "Coveo Search API key with Query, Passage Retrieval, and Answering permissions"
    },
    "COVEO_ANSWERING_CONFIG_ID": {
      "type": "string",
      "description": "Coveo Answering API configuration ID (UUID)"
    },
    "COVEO_PLATFORM_URL": {
      "type": "string",
      "description": "Coveo Platform API base URL",
      "default": "https://platform.cloud.coveo.com"
    },
    "COVEO_SEARCH_HUB": {
      "type": "string",
      "description": "Search Hub identifier for analytics",
      "default": "workshop"
    },
    "COGNITO_USER_POOL_ID": {
      "type": "string",
      "description": "AWS Cognito User Pool ID"
    },
    "COGNITO_CLIENT_ID": {
      "type": "string",
      "description": "AWS Cognito App Client ID"
    },
    "COGNITO_DOMAIN": {
      "type": "string",
      "description": "Cognito Hosted UI domain"
    },
    "API_BASE_URL": {
      "type": "string",
      "description": "API Gateway base URL"
    },
    "BEDROCK_AGENT_ID": {
      "type": "string",
      "description": "Amazon Bedrock Agent ID"
    },
    "BEDROCK_AGENT_ALIAS_ID": {
      "type": "string",
      "description": "Amazon Bedrock Agent Alias ID"
    },
    "BEDROCK_MODEL_ID": {
      "type": "string",
      "description": "Bedrock foundation model ID",
      "default": "amazon.nova-lite-v1:0"
    },
    "AGENTCORE_GATEWAY_URL": {
      "type": "string",
      "description": "AWS AgentCore Gateway endpoint URL"
    },
    "MCP_SERVER_URL": {
      "type": "string",
      "description": "Coveo MCP Server endpoint URL"
    },
    "AWS_REGION": {
      "type": "string",
      "description": "AWS region for deployment",
      "default": "us-east-1",
      "enum": ["us-east-1", "us-west-2", "eu-west-1"]
    },
    "STACK_PREFIX": {
      "type": "string",
      "description": "CloudFormation stack name prefix",
      "default": "workshop"
    },
    "S3_BUCKET_NAME": {
      "type": "string",
      "description": "S3 bucket name for UI hosting"
    },
    "LOG_LEVEL": {
      "type": "string",
      "description": "Lambda logging level",
      "default": "INFO",
      "enum": ["DEBUG", "INFO", "WARNING", "ERROR", "CRITICAL"]
    }
  },
  "required": [
    "COVEO_ORG_ID",
    "COVEO_SEARCH_API_KEY",
    "COVEO_ANSWERING_CONFIG_ID",
    "COGNITO_USER_POOL_ID",
    "COGNITO_CLIENT_ID",
    "API_BASE_URL",
    "AWS_REGION",
    "STACK_PREFIX"
  ]
}
